<article class="portfolio-item" data-image="{{ image }}" data-title="{{ title }}" data-desc="{{ description }}">
  <div class="portfolio-thumb">
    <img src="{{ image }}" alt="{{ alt }}" />
    <div class="portfolio-overlay">
      <span class="portfolio-view">Ver detalhes</span>
    </div>
  </div>
  <div class="portfolio-content">
    <div class="portfolio-title">{{ title }}</div>
    <div class="portfolio-meta">{{ description }}</div>
  </div>
</article>

